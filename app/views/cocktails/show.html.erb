<h1><%= @cocktail.name %></h1>


<%@dose = Dose.new%>

<%= simple_form_for([@cocktail, @dose]) do |d| %>
<%= d.input :description %>
<%= d.association :ingredient%>
<%= d.submit  %>
<% end %>

<% @doses.each do |dose| %>
 <ul>
  <li><%= dose.ingredient.name %></li>
  <li><%= dose.description %></li>
  <li><%= link_to 'Remove', dose_path(dose),
   method: :delete,
    data: { confirm: 'Are you sure?' } %>
</ul>
<% end %>




<p><%= link_to "Back to home", cocktails_path%></p>
